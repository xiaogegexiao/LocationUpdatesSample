<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cammy.locationupdates.locationupdates.MainActivity">

    <Button
        android:id="@+id/geofence_setup"
        android:text="Setup Geofence"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/location_trigger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="192dp"
        android:layout_marginBottom="71dp" />

    <Button
        android:id="@+id/location_trigger"
        android:text="TriggerLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/geofence_setup"
        app:layout_constraintRight_toRightOf="@+id/geofence_setup"
        app:layout_constraintTop_toBottomOf="@+id/geofence_setup"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="311dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toTopOf="@+id/location_history" />

    <Button
        android:id="@+id/location_history"
        android:text="Location History"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/geofence_setup"
        app:layout_constraintRight_toRightOf="@+id/geofence_setup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_trigger"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="431dp" />

</android.support.constraint.ConstraintLayout>
